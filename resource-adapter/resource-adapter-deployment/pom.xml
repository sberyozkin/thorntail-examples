  <artifactId>example-resource-adapter-deployment</artifactId>

  <name>Thorntail Examples: Resource Adapter Deployment</name>
  <description>Thorntail Examples: Resource Adapter Deployment</description>

  <packaging>jar</packaging>

  <build>
    <plugins>
      <plugin>
        <groupId>io.thorntail</groupId>
        <artifactId>thorntail-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>package</id>
          </execution>
          <execution>
            <id>start</id>
          </execution>
          <execution>
            <id>stop</id>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>io.thorntail.examples</groupId>
      <artifactId>examples-base</artifactId>
    </dependency>
    <dependency>
      <groupId>io.thorntail</groupId>
      <artifactId>jaxrs</artifactId>
    </dependency>
    <dependency>
        <groupId>io.thorntail</groupId>
        <artifactId>ejb</artifactId>
      </dependency>
    <dependency>
      <groupId>io.thorntail</groupId>
      <artifactId>resource-adapters</artifactId>
    </dependency>
        
    <dependency>
      <groupId>net.java.xadisk</groupId>
      <artifactId>xadisk</artifactId>
      <version>1.2.2</version>
      <type>rar</type>
    </dependency>

    <dependency>
      <groupId>net.java.xadisk</groupId>
      <artifactId>xadisk</artifactId>
      <version>1.2.2</version>
      <type>jar</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.jboss.spec</groupId>
      <artifactId>jboss-javaee-all-7.0</artifactId>
      <version>1.0.3.Final</version>
<!--      <scope>test</scope> -->
    </dependency>
    
  </dependencies>

</project>
