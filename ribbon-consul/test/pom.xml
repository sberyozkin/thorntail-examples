<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.thorntail.examples</groupId>
    <artifactId>examples-ribbon-consul-parent</artifactId>
    <version>2.0.1.Final-SNAPSHOT</version>
    <relativePath>../</relativePath>
  </parent>

  <artifactId>example-ribbon-consul-test</artifactId>

  <name>Thorntail Examples: Netflix Ribbon using Consul: Multi-service Test </name>
  <description>Thorntail Examples: Netflix Ribbon using Consul: Multi-service Test</description>

  <packaging>pom</packaging>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
        <executions>
          <execution>
            <id>integration-test</id>
            <phase>none</phase>
          </execution>
          <execution>
            <id>verify</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>io.thorntail</groupId>
        <artifactId>thorntail-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>package</id>
            <phase>none</phase>
          </execution>
          <execution>
            <id>start</id>
            <phase>none</phase>
          </execution>
          <execution>
            <id>stop</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>consul</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <executions>
              <execution>
                <phase>test-compile</phase>
                <goals>
                  <goal>testCompile</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <artifactId>maven-failsafe-plugin</artifactId>
            <executions>
              <execution>
                <id>integration-test</id>
                <phase>integration-test</phase>
              </execution>
              <execution>
                <id>verify</id>
                <phase>verify</phase>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>io.thorntail</groupId>
            <artifactId>thorntail-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>package</id>
                <phase>none</phase>
              </execution>
              <execution>
                <id>start</id>
                <phase>none</phase>
              </execution>
              <execution>
                <id>multistart</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>multistart</goal>
                </goals>
                <configuration>
                  <processes>
                    <process>
                      <artifactId>example-ribbon-consul-frontend</artifactId>
                    </process>
                    <process>
                      <artifactId>example-ribbon-consul-time</artifactId>
                      <properties>
                        <swarm.port.offset>1</swarm.port.offset>
                      </properties>
                    </process>
                    <process>
                      <artifactId>example-ribbon-consul-time</artifactId>
                      <properties>
                        <swarm.port.offset>2</swarm.port.offset>
                      </properties>
                    </process>
                    <process>
                      <artifactId>example-ribbon-consul-events</artifactId>
                      <properties>
                        <swarm.port.offset>3</swarm.port.offset>
                      </properties>
                    </process>
                  </processes>
                </configuration>
              </execution>
              <execution>
                <id>stop</id>
                <phase>post-integration-test</phase>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <dependencies>
    <dependency>
      <groupId>io.thorntail.examples</groupId>
      <artifactId>examples-base</artifactId>
    </dependency>
    <dependency>
      <groupId>io.thorntail.examples</groupId>
      <artifactId>example-ribbon-consul-frontend</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>io.thorntail.examples</groupId>
      <artifactId>example-ribbon-consul-time</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>io.thorntail.examples</groupId>
      <artifactId>example-ribbon-consul-events</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
  </dependencies>

  <modules>
    <module>../frontend</module>
    <module>../events</module>
    <module>../time</module>
  </modules>

</project>
